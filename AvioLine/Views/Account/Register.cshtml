@model RegisterUserViewModel
<div style="margin:30px">
	<form method="post">
		<div class="mb-3">
			<h1 class="lead">Регистрация</h1>
		</div>
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="mb-3">
			<input type="email" asp-for="Email" class="form-control" id="validationDefault01" placeholder="Email" required>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>


		<div class="mb-3">
			<input type="text" asp-for="Password" class="form-control" id="validationDefault02" placeholder="Пароль" required minlenght="8" maxlength="20">
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<input type="text" asp-for="ConfirmPassword" class="form-control" placeholder="Подтвердить пароль" required>
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>
		<div class="mb-3"> <button class="btn btn-outline-primary" asp-controller="Account" asp-action="Register" type="submit">Зарегистрироваться</button> </div>
	</form>
</div>